{
  "name": "meson-contracts-solidity",
  "version": "0.2.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "hardhat compile --config hardhat.config.ts",
    "postbuild": "cp artifacts/contracts/Meson.sol/Meson.json packages/contract-abis/abis/Meson.json",
    "cleanbuild": "hardhat clean && yarn build",
    "estimate": "hardhat --network hardhat run scripts/estimate-gas.js",
    "test": "hardhat --network hardhat test",
    "chain": "node scripts/set-chain-config.js",
    "chain:local": "NETWORK_ID=local yarn chain",
    "chain:eth": "NETWORK_ID=mainnet yarn chain",
    "chain:bsc": "NETWORK_ID=bsc yarn chain",
    "chain:cfx": "NETWORK_ID=cfx yarn chain",
    "chain:one": "NETWORK_ID=one yarn chain",
    "deploy-testnet": "yarn chain && hardhat run scripts/deploy-testnet.js",
    "deploy:eth": "NETWORK_ID=mainnet yarn deploy-testnet",
    "deploy:bsc": "NETWORK_ID=bsc yarn deploy-testnet",
    "deploy:ftm": "NETWORK_ID=ftm yarn deploy-testnet",
    "deploy:poly": "NETWORK_ID=polygon yarn deploy-testnet",
    "deploy:avax": "NETWORK_ID=avax yarn deploy-testnet",
    "deploy:one": "NETWORK_ID=one yarn deploy-testnet",
    "deploy:cfx": "NETWORK_ID=cfx yarn deploy-testnet",
    "upgrade": "hardhat run scripts/upgrade.js",
    "docgen": "solidity-docgen --solc-module solc -t ./templates",
    "publish": "npm publish --workspaces"
  },
  "devDependencies": {
    "@mesonfi/contract-abis": "^0.2.0",
    "@mesonfi/contract-types": "^0.2.0",
    "@mesonfi/presets": "^0.2.0",
    "@mesonfi/sdk": "^0.2.0",
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.4.1",
    "@openzeppelin/contracts-upgradeable": "^4.4.1",
    "@openzeppelin/hardhat-upgrades": "^1.12.0",
    "@swc/core": "^1.2.111",
    "@swc/helpers": "^0.2.14",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.1.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat": "2.8.0",
    "hardhat-change-network": "^0.0.7",
    "mocha": "^9.1.3",
    "mocha-chai-jest-snapshot": "^1.1.3",
    "regenerator-runtime": "^0.13.9",
    "solc": "0.8.6",
    "solidity-docgen": "^0.5.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.4.0",
    "typechain": "^6.1.0",
    "typescript": "^4.5.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
