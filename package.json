{
  "name": "meson-contracts-solidity",
  "version": "0.4.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "hardhat compile --config hardhat.config.ts",
    "postbuild": "cp artifacts/contracts/Meson.sol/Meson.json packages/contract-abis/abis/Meson.json",
    "cleanbuild": "hardhat clean && yarn build",
    "docgen": "solidity-docgen --solc-module solc -t ./templates",
    "test": "hardhat --network hardhat test",
    "estimate": "hardhat --network hardhat run scripts/estimate-gas.js",
    "estimate2": "hardhat --network hardhat run scripts/estimate-gas-upgradable.js",

    "chain": "node scripts/set-chain-config.js",
    "chain:local": "set NETWORK_ID=local&&yarn chain",
    "chain:eth": "NETWORK_ID=ropsten yarn chain",
    "chain:bsc": "NETWORK_ID=bsc yarn chain",
    "chain:avax": "NETWORK_ID=avax yarn chain",
    "chain:poly": "NETWORK_ID=polygon yarn chain",
    "chain:ftm": "NETWORK_ID=ftm yarn chain",
    "chain:one": "NETWORK_ID=one yarn chain",

    "testnet": "yarn chain && hardhat run scripts/testnets/deploy-upgradable.js",
    "testnet:eth": "NETWORK_ID=ropsten yarn testnet",
    "testnet:bsc": "NETWORK_ID=bsc yarn testnet",
    "testnet:avax": "NETWORK_ID=avax yarn testnet",
    "testnet:poly": "NETWORK_ID=polygon yarn testnet",
    "testnet:ftm": "NETWORK_ID=ftm yarn testnet",
    "testnet:one": "NETWORK_ID=one yarn testnet",

    "up": "yarn chain && hardhat run scripts/testnets/upgrade.js",
    "up:eth": "NETWORK_ID=ropsten yarn up",
    "up:bsc": "NETWORK_ID=bsc yarn up",
    "up:avax": "NETWORK_ID=avax yarn up",
    "up:poly": "NETWORK_ID=polygon yarn up",
    "up:ftm": "NETWORK_ID=ftm yarn up",
    "up:one": "NETWORK_ID=one yarn up",

    "deploy": "yarn chain && hardhat run scripts/mainnets/deploy-upgradable.js",
    "deploy:eth": "NETWORK_ID=mainnet yarn deploy",
    "deploy:bsc": "NETWORK_ID=bsc yarn deploy",
    "deploy:avax": "NETWORK_ID=avax yarn deploy",
    "deploy:poly": "NETWORK_ID=polygon yarn deploy",
    "deploy:ftm": "NETWORK_ID=ftm yarn deploy"
  },
  "devDependencies": {
    "@mesonfi/contract-abis": "^0.4.0",
    "@mesonfi/contract-types": "^0.4.0",
    "@mesonfi/presets": "^0.4.0",
    "@mesonfi/sdk": "^0.4.0",
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.4.1",
    "@openzeppelin/contracts-upgradeable": "^4.4.1",
    "@openzeppelin/hardhat-upgrades": "^1.12.0",
    "@swc/core": "^1.2.111",
    "@swc/helpers": "^0.3.2",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.1.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat": "2.8.0",
    "hardhat-change-network": "^0.0.7",
    "mocha": "^9.1.3",
    "mocha-chai-jest-snapshot": "^1.1.3",
    "regenerator-runtime": "^0.13.9",
    "solc": "0.8.6",
    "solidity-docgen": "^0.5.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.4.0",
    "typechain": "^6.1.0",
    "typescript": "^4.5.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
