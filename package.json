{
  "name": "meson-contracts-solidity",
  "version": "1.1.0-alpha.2",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": "16"
  },
  "scripts": {
    "build": "hardhat compile --config hardhat.config.ts",
    "postbuild": "cp artifacts/contracts/Meson.sol/Meson.json packages/contract-abis/abis/Meson.json && cp artifacts/contracts/test/MockToken.sol/MockToken.json packages/contract-abis/abis/ERC20.json",
    "cleanbuild": "hardhat clean && yarn build",
    "build:packages": "yarn workspace @mesonfi/sdk build && yarn workspace @mesonfi/presets build",
    "build:types": "hardhat chain --testnet ropsten && yarn cleanbuild",
    "test": "hardhat chain --testnet ropsten && hardhat test",
    "docgen": "solidity-docgen --solc-module solc -t ./templates",
    "testnet:ropsten": "hardhat deploy --testnet ropsten --upgradable true",
    "testnet:bnb": "hardhat deploy --testnet bnb --upgradable true",
    "testnet:polygon": "hardhat deploy --testnet polygon --upgradable true",
    "testnet:avax": "hardhat deploy --testnet avax --upgradable true",
    "testnet:ftm": "hardhat deploy --testnet ftm --upgradable true",
    "testnet:cfx": "hardhat deploy --testnet cfx --upgradable true",
    "testnet:one": "hardhat deploy --testnet one --upgradable true",
    "testnet:aurora": "hardhat deploy --testnet aurora --upgradable true",
    "testnet:evmos": "hardhat deploy --testnet evmos --upgradable true",
    "testnet:gnosis": "hardhat deploy --testnet gnosis --upgradable true",
    "testnet:eos": "hardhat deploy --testnet eos --upgradable true",
    "testnet:zksync": "ZKSYNC=true hardhat deploy --testnet zksync --upgradable true",
    "testnet:tron": "hardhat deploy --testnet tron --upgradable true",
    "deploy:eth": "hardhat deploy --mainnet eth --upgradable true",
    "deploy:bnb": "hardhat deploy --mainnet bnb --upgradable true",
    "deploy:polygon": "hardhat deploy --mainnet polygon --upgradable true",
    "deploy:avax": "hardhat deploy --mainnet avax --upgradable true",
    "deploy:ftm": "hardhat deploy --mainnet ftm --upgradable true",
    "deploy:arb": "hardhat deploy --mainnet arb --upgradable true",
    "deploy:opt": "hardhat deploy --mainnet opt --upgradable true",
    "deploy:one": "hardhat deploy --mainnet one --upgradable true",
    "deploy:aurora": "hardhat deploy --mainnet aurora --upgradable true",
    "deploy:cfx": "hardhat deploy --mainnet cfx --upgradable true",
    "deploy:evmos": "hardhat deploy --mainnet evmos --upgradable true",
    "deploy:movr": "hardhat deploy --mainnet movr --upgradable true",
    "deploy:beam": "hardhat deploy --mainnet beam --upgradable true",
    "deploy:eos": "hardhat deploy --mainnet eos --upgradable true",
    "deploy:zksync": "ZKSYNC=true hardhat deploy --mainnet zksync --upgradable true",
    "deploy:tron": "hardhat deploy --mainnet tron --upgradable true"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync-deploy": "^0.4.0",
    "@matterlabs/hardhat-zksync-solc": "^0.3.9",
    "@mesonfi/contract-abis": "^1.0.0",
    "@mesonfi/contract-types": "^1.0.0",
    "@mesonfi/presets": "^1.1.0-alpha.2",
    "@mesonfi/sdk": "^1.1.0-alpha.2",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.7.2",
    "@openzeppelin/contracts-upgradeable": "^4.7.2",
    "@openzeppelin/hardhat-upgrades": "^1.20.0",
    "@swc/core": "^1.2.224",
    "@swc/helpers": "^0.4.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^4.0.4",
    "ethers": "^5.7.1",
    "hardhat": "2.10.1",
    "hardhat-change-network": "^0.0.7",
    "mocha": "^10.0.0",
    "mocha-chai-jest-snapshot": "^1.1.4",
    "regenerator-runtime": "^0.13.9",
    "solc": "0.8.6",
    "solidity-docgen": "^0.5.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4",
    "zksync-web3": "^0.9.0"
  },
  "resolutions": {
    "ethers": "5.7.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
