{
  "name": "meson-contracts-solidity",
  "version": "0.1.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "hardhat compile --config hardhat.config.ts",
    "cleanbuild": "hardhat clean && hardhat compile --config hardhat.config.ts",
    "test": "hardhat --network hardhat test",
    "chain:local": "BLOCKCHAIN_NAME=local node scripts/set-chain-config.js",
    "chain:eth": "BLOCKCHAIN_NAME=eth node scripts/set-chain-config.js",
    "chain:bsc": "BLOCKCHAIN_NAME=bsc node scripts/set-chain-config.js",
    "chain:cfx": "BLOCKCHAIN_NAME=cfx node scripts/set-chain-config.js",
    "chain:one": "BLOCKCHAIN_NAME=one node scripts/set-chain-config.js",
    "deploy": "hardhat run scripts/deploy-upgradable.js",
    "upgrade": "hardhat run scripts/upgrade.js",
    "docgen": "solidity-docgen --solc-module solc -t ./templates",
    "publish": "npm publish --workspaces"
  },
  "devDependencies": {
    "@mesonfi/contract-abis": "0.1.2",
    "@mesonfi/contract-types": "0.1.0",
    "@mesonfi/presets": "0.1.4",
    "@mesonfi/sdk": "0.1.0",
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.4.1",
    "@openzeppelin/contracts-upgradeable": "^4.4.1",
    "@openzeppelin/hardhat-upgrades": "^1.12.0",
    "@swc/core": "^1.2.111",
    "@swc/helpers": "^0.2.14",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.1.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat": "2.8.0",
    "mocha": "^9.1.3",
    "mocha-chai-jest-snapshot": "^1.1.3",
    "regenerator-runtime": "^0.13.9",
    "solc": "0.8.6",
    "solidity-docgen": "^0.5.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.4.0",
    "typechain": "^6.1.0",
    "typescript": "^4.5.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
